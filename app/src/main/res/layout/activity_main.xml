<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="ENTRAR"
            android:layout_width="223dp"
            android:layout_height="54dp" tools:layout_editor_absoluteY="545dp"
            tools:layout_editor_absoluteX="94dp" android:id="@+id/button"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars[0]"
            tools:layout_editor_absoluteY="93dp" tools:layout_editor_absoluteX="141dp" android:id="@+id/imageView"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            tools:layout_editor_absoluteY="386dp" tools:layout_editor_absoluteX="98dp" android:id="@+id/editText"
            android:text="Senha"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            tools:layout_editor_absoluteY="322dp" tools:layout_editor_absoluteX="98dp" android:id="@+id/editText2"
            android:text="Usuario"/>
    <TextView
            android:text="Gym Trainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="255dp"
            tools:layout_editor_absoluteX="124dp" android:id="@+id/textView" android:textSize="30sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="455dp"
            tools:layout_editor_absoluteX="98dp" android:id="@+id/textView2" tools:text="Esqueceu a senha?"
            android:textStyle="bold"/>
    <TextView
            android:text="Você é novo? Cadastre-se aqui!"
            android:layout_width="wrap_content"
            android:layout_height="21dp" tools:layout_editor_absoluteY="683dp"
            tools:layout_editor_absoluteX="106dp" android:id="@+id/textView3" android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>